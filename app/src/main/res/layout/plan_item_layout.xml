<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/plan_item_swipe_reveal_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:mode="same_level"
    app:dragEdge="right">

    <!-- Your secondary layout here -->
    <FrameLayout
        android:id="@+id/plan_item_delete"
        android:background="@color/ETON_BLUE"
        android:layout_width="108dp"
        android:layout_height="96dp">
        <ImageView
            android:scaleType="center"
            android:src="@drawable/ic_check_24dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>
    </FrameLayout>

    <!-- Your main layout here -->
    <RelativeLayout
        android:id="@+id/plan_item_main"
        android:layout_width="match_parent"
        android:layout_height="96dp" >
        <TextView
            android:id="@+id/plan_item_name"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="@color/illuminating_emerald"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>